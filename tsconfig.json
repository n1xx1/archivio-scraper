{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["ES2021"],
    "downlevelIteration": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "typeRoots": ["./node_modules/@types", "src/@types"]
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
